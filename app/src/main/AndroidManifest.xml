<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.mydroidgitexp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyDroidGitExp"
        android:name = ".GitHubApp">

        <activity
            android:name=".ui.main.MainActivity"
            android:exported="true"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>



        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="com.example.mydroidgitexp.androidx-startup"
            android:exported="false"
            tools:node="merge">

            <meta-data
                android:name="com.example.mydroidgitexp.initializer.TimberInitializer"
                android:value="androidx.startup" />
        </provider>





    </application>

</manifest>